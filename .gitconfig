[merge]
[diff]
	tool = vimdiff
[user]
	name = Mitch Lloyd
	email = mitch.lloyd@gmail.com
[core]
	excludesfile = /Users/mitch/.gitignore_global
	editor = /usr/bin/vim
[alias]
	d = difftool
  a = add
  bd = branch -d
  bdf = branch -D
  st = status
  ca = commit -a
  m = merge --no-ff
  p = push
  pa =  push --all origin
  rh = reset --hard
  b = branch
  cob = checkout -b
  co = checkout
  ba = branch -a
  cp = cherry-pick
  l = log --pretty='format:%Cgreen%h%Creset %an - %s' --graph
  pom = pull origin master
  rc = rebase --continue
[difftool]
	prompt = false
[push]
	default = simple
[pull]
	rebase = preserve
